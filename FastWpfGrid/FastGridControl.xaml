<UserControl x:Name="Root"
	x:Class="FastWpfGrid.FastGridControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="200"
	d:DesignWidth="400"
	FocusVisualStyle="{x:Null}"
	mc:Ignorable="d">

	<UserControl.Style>
		<Style TargetType="UserControl">
			<Setter Property="Opacity" Value="1"/>
			<Style.Triggers>
				<Trigger Property="IsEnabled" Value="False">
					<Setter Property="Opacity" Value="0.6"/>
				</Trigger>
			</Style.Triggers>
		</Style>
	</UserControl.Style>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>

		<Grid x:Name="ImageGrid"
			Grid.Row="0"
			Grid.Column="0"
			Margin="{Binding ElementName=Root, Path=InnerPadding}"
			SizeChanged="imageGridResized">
			<Image x:Name="Image"
				FocusVisualStyle="{x:Null}"
				Focusable="True"
				KeyDown="imageKeyDown"
				Mouse.MouseLeave="imageMouseLeave"
				MouseDown="imageMouseDown"
				MouseWheel="imageMouseWheel"
				RenderOptions.BitmapScalingMode="NearestNeighbor"
				SnapsToDevicePixels="True"
				TextInput="imageTextInput"/>

			<Border x:Name="EditBorder" Margin="-1,0,1,0" SnapsToDevicePixels="True">

			</Border>
		</Grid>

		<ScrollBar x:Name="Hscroll"
			Grid.Row="1"
			Grid.Column="0"
			Maximum="100"
			Orientation="Horizontal"
			Scroll="hscroll_Scroll"/>
		<ScrollBar x:Name="Vscroll"
			Grid.Row="0"
			Grid.Column="1"
			Maximum="100"
			Orientation="Vertical"
			Scroll="vscroll_Scroll"/>

		<Grid
			Grid.Row="1"
			Grid.Column="1"
			Width="17"
			Height="17"
			HorizontalAlignment="Right"
			VerticalAlignment="Top">
			<ContentControl Content="{Binding ElementName=Root, Path=CornerContent}"/>
		</Grid>
	</Grid>
</UserControl>
