<UserControl
	x:Class="FastWpfGrid.FastGridControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:FastWpfGrid="clr-namespace:FastWpfGrid"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="300"
	d:DesignWidth="300"
	mc:Ignorable="d">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>

		<Grid x:Name="imageGrid"
			Grid.Row="0"
			Grid.Column="0"
			SizeChanged="imageGridResized">

			<Image x:Name="image"
				FocusVisualStyle="{x:Null}"
				Focusable="True"
				KeyDown="imageKeyDown"
				Mouse.MouseLeave="imageMouseLeave"
				MouseDown="imageMouseDown"
				MouseWheel="imageMouseWheel"
				RenderOptions.BitmapScalingMode="NearestNeighbor"
				SnapsToDevicePixels="True"
				TextInput="imageTextInput"/>

			<TextBox x:Name="edText"
				Margin="-1,0,1,0"
				AcceptsReturn="True"
				LostFocus="edTextLostFocus"
				PreviewKeyDown="edTextKeyDown"
				SnapsToDevicePixels="True"
				TextChanged="edTextChanged"
				Visibility="Hidden"/>

		</Grid>


		<ScrollBar x:Name="hscroll"
			Grid.Row="1"
			Grid.Column="0"
			Maximum="100"
			Orientation="Horizontal"
			Scroll="hscroll_Scroll"/>

		<ScrollBar x:Name="vscroll"
			Grid.Row="0"
			Grid.Column="1"
			Maximum="100"
			Orientation="Vertical"
			Scroll="vscroll_Scroll"/>
	</Grid>

</UserControl>
