<UserControl
	x:Class="SimpleExcelViewer.Views.MainView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:base="RW.Base.WPF"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:dialogs="clr-namespace:SimpleExcelViewer.Views.Dialogs"
	xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
	xmlns:local="clr-namespace:SimpleExcelViewer.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:vms="clr-namespace:SimpleExcelViewer.ViewModelServices"
	xmlns:wpf="RW.Common.WPF"
	d:Background="White"
	d:DataContext="{d:DesignInstance Type=local:MainViewModel}"
	d:DesignHeight="450"
	d:DesignWidth="800"
	DataContext="{base:DISource Type=local:MainViewModel}"
	AllowDrop="True"
	mc:Ignorable="d">

	<dxmvvm:Interaction.Behaviors>
		<dxmvvm:EventToCommand Command="{Binding DropCommand}" EventName="PreviewDrop" PassEventArgsToCommand="True"/>
		<dxmvvm:EventToCommand Command="{Binding LoadedCommand}" EventName="Loaded" PassEventArgsToCommand="True"/>

		<dxmvvm:OpenFileDialogService/>
		<vms:MessageBoxServiceEx/>
		<base:DispatcherServiceEx/>

		<vms:DialogService x:Name="AppSettingsDialogService" ContentType="{x:Type dialogs:AppSettingsDialog}"/>

		<vms:DialogService x:Name="FileInfoDialogService" ContentType="{x:Type dialogs:FileInfoDialog}"/>

		<vms:DialogService x:Name="LibrariesDialogService" ContentType="{x:Type dialogs:LibrariesDialog}"/>
		<vms:DialogService x:Name="SourceCodeDialogService" ContentType="{x:Type dialogs:SourceCodeDialog}"/>
		<vms:DialogService x:Name="AboutDialogService" ContentType="{x:Type dialogs:AboutDialog}"/>

	</dxmvvm:Interaction.Behaviors>

	<UserControl.Resources>
		<wpf:BindingProxy x:Key="ViewModel" Data="{Binding}"/>

		<wpf:CommandProxy x:Key="CloseCommand" Command="{Binding CloseCommand}"/>
		<wpf:CommandProxy x:Key="ReloadCommand" Command="{Binding ReloadCommand}"/>
		<wpf:CommandProxy x:Key="TabItemMouseDownCommand" Command="{Binding TabItemMouseDownCommand}"/>

		<Style x:Key="ToolBarButton" TargetType="Button">
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="Height" Value="22"/>
			<Setter Property="Width" Value="22"/>
		</Style>

	</UserControl.Resources>

	<Grid>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
			</Grid.RowDefinitions>

			<Border>
				<!--<wpf:SpacingStackPanel HorizontalSpacing="4" Orientation="Horizontal">
					<Button Content="Open"/>
				</wpf:SpacingStackPanel>-->
				<Grid>

					<Menu>

						<MenuItem Header="File">
							<MenuItem Command="{Binding OpenCommand}" Header="Open File"/>
							<MenuItem Header="Recent Files" IsEnabled="{Binding RecentFilesService.IsEmpty, Converter={StaticResource Boolean2BooleanReConverter}}">
								<MenuItem.ItemsSource>
									<CompositeCollection>
										<CollectionContainer Collection="{Binding Source={StaticResource ViewModel}, Path=Data.RecentFilesService.CollectionView}"/>
										<Separator/>
										<MenuItem Command="{Binding ClearAllRecentFilesCommand}" Header="Clear All"/>
									</CompositeCollection>
								</MenuItem.ItemsSource>
								<MenuItem.ItemContainerStyle>
									<Style TargetType="MenuItem">
										<Setter Property="Header" Value="{Binding FilePath}"/>
										<Setter Property="Command" Value="{Binding DataContext.OpenFileCommand, RelativeSource={RelativeSource AncestorType=MenuItem}}"/>
										<Setter Property="CommandParameter" Value="{Binding}"/>
									</Style>
								</MenuItem.ItemContainerStyle>
							</MenuItem>
							<Separator/>
							<MenuItem Command="{Binding ReloadCommand}" CommandParameter="{Binding SelectedItem}" Header="Reload File"/>
							<MenuItem Command="{Binding OpenInFileExplorerCommand}" CommandParameter="{Binding SelectedItem}" Header="Open In File Explorer"/>
							<MenuItem Command="{Binding ViewFileInfoCommand}" CommandParameter="{Binding SelectedItem}" Header="View File Info"/>
							<Separator/>
							<MenuItem Command="{Binding CloseCommand}" CommandParameter="{Binding SelectedItem}" Header="Close"/>
							<MenuItem Command="{Binding CloseOthersCommand}" CommandParameter="{Binding SelectedItem}" Header="Close Others"/>
							<MenuItem Command="{Binding CloseAllCommand}" CommandParameter="{Binding SelectedItem}" Header="Close All"/>
							<Separator/>
							<MenuItem Command="{Binding OpenAppSettingsCommand}" Header="Settings"/>
							<Separator/>
							<MenuItem Command="{Binding ExitCommand}" Header="Exit"/>
						</MenuItem>

						<MenuItem Header="Config">
							<MenuItem Command="{Binding ConfigHighlightCommand}" Header="Config Highlight"/>
						</MenuItem>

						<MenuItem Header="More">
							<MenuItem Command="{Binding OpenSourceLibrariesCommand}" Header="Open Source Libraries"/>
							<MenuItem Command="{Binding SourceCodeCommand}" Header="Source Code"/>
							<Separator/>
							<MenuItem Command="{Binding AboutCommand}" Header="About"/>
						</MenuItem>

						<!--<MenuItem DataContext="{Binding SelectedItem}" Header="Current" Visibility="{Binding Converter={StaticResource Object2VisibilityConverter}}">

					</MenuItem>-->

					</Menu>

					<Border Padding="4,0" HorizontalAlignment="Right">
						<TextBlock
							d:Text="102.3 MB"
							VerticalAlignment="Center"
							Text="{Binding AppMemoryCounter.InfoText}"
							ToolTip="{Binding AppMemoryCounter.FullInfoText}"/>
					</Border>

				</Grid>
			</Border>

			<Border Grid.Row="1">
				<Grid>
					<!--
						BorderBrush="#D3D3D3"
					-->
					<TabControl
						d:SelectedIndex="0"
						Padding="0"
						HorizontalContentAlignment="Stretch"
						BorderThickness="0,1,0,0"
						SelectedItem="{Binding SelectedItem}"
						ItemsSource="{Binding TabItems}"
						d:ItemsSource="{d:SampleData ItemCount=5}">

						<TabControl.ItemTemplate>
							<DataTemplate>
								<Grid Background="Transparent">

									<DockPanel>
										<Border Margin="4,0,0,0" DockPanel.Dock="Right">
											<Button
												Width="16"
												Height="16"
												Padding="0"
												BorderThickness="0"
												Background="Transparent"
												Command="{StaticResource CloseCommand}"
												CommandParameter="{Binding}"
												Cursor="Hand"
												ToolTip="Close">
												<wpf:FontIcon
													FontFamily="{StaticResource IconPack}"
													FontSize="14"
													FontWeight="Bold"
													Foreground="Red"
													Text="&#xE894;"/>
											</Button>
										</Border>
										<Grid HorizontalAlignment="Left">
											<ProgressBar
												Width="auto"
												Margin="-2,0"
												Minimum="0"
												Maximum="1"
												BorderThickness="0"
												wpf:ProgressBarExtension.Progress="{Binding StatusReport.Progress}"
												Background="Transparent"
												Opacity="0.5"
												Visibility="{Binding IsLoading, Converter={StaticResource Boolean2VisibilityConverter}}"/>
											<TextBlock d:Text="qazxswg.csp" Text="{Binding FileName}"/>
										</Grid>
									</DockPanel>
								</Grid>
							</DataTemplate>
						</TabControl.ItemTemplate>

						<TabControl.ItemContainerStyle>
							<Style TargetType="TabItem">
								<!--<Setter Property="Padding" Value="0"/>-->
								<Setter Property="ToolTip" Value="{Binding FilePath}"/>
								<Setter Property="wpf:ControlExtension.MouseDownCommand" Value="{StaticResource TabItemMouseDownCommand}"/>
								<Setter Property="ContextMenu">
									<Setter.Value>
										<ContextMenu>
											<MenuItem Command="{Binding Source={StaticResource ViewModel}, Path=Data.CopyFileNameCommand}" CommandParameter="{Binding}" Header="Copy File Name"/>
											<MenuItem Command="{Binding Source={StaticResource ViewModel}, Path=Data.CopyFilePathCommand}" CommandParameter="{Binding}" Header="Copy File Path"/>
											<MenuItem Command="{Binding Source={StaticResource ViewModel}, Path=Data.OpenInFileExplorerCommand}" CommandParameter="{Binding}" Header="Open in File Explorer"/>
											<Separator/>
											<MenuItem Command="{Binding Source={StaticResource ViewModel}, Path=Data.ViewFileInfoCommand}" CommandParameter="{Binding}" Header="View File Info"/>
											<Separator/>
											<MenuItem Command="{Binding Source={StaticResource ViewModel}, Path=Data.ReloadCommand}" CommandParameter="{Binding}" Header="Reload"/>
											<Separator/>
											<MenuItem Command="{Binding Source={StaticResource ViewModel}, Path=Data.CloseCommand}" CommandParameter="{Binding}" Header="Close"/>
											<MenuItem Command="{Binding Source={StaticResource ViewModel}, Path=Data.CloseOthersCommand}" CommandParameter="{Binding}" Header="Close Others"/>
											<MenuItem Command="{Binding Source={StaticResource ViewModel}, Path=Data.CloseAllCommand}" CommandParameter="{Binding}" Header="Close All"/>
										</ContextMenu>
									</Setter.Value>
								</Setter>
							</Style>
						</TabControl.ItemContainerStyle>

						<TabControl.ContentTemplate>
							<DataTemplate>
								<Border x:Name="PART_Border">
									<!--<local:TabView dxmvvm:ViewModelExtensions.Parameter="{Binding ElementName=PART_Border, Path=DataContext}" dxmvvm:ViewModelExtensions.ParentViewModel="{Binding Source={StaticResource ViewModel}, Path=Data}"/>-->
									<ContentControl Content="{Binding View}" Focusable="False" IsTabStop="False"/>
								</Border>
							</DataTemplate>
						</TabControl.ContentTemplate>

					</TabControl>

					<Border Visibility="{Binding TabItems.Count, Converter={StaticResource IListToVisibilityReConverter}}">
						<TextBlock
							Margin="0"
							HorizontalAlignment="Center"
							VerticalAlignment="Center"
							FontSize="44"
							Opacity="0.2"
							Text="Simple Excel Viewer"
							TextAlignment="Center"
							TextWrapping="Wrap"/>
					</Border>
				</Grid>
			</Border>

			<Border
				Grid.Row="2"
				Height="1"
				Background="#D3D3D3"
				SnapsToDevicePixels="True"
				UseLayoutRounding="True"/>

			<Border Grid.Row="3">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="auto"/>
					</Grid.ColumnDefinitions>

					<Border Grid.Column="0">
						<DockPanel>

							<Border Padding="4,2" Background="Gainsboro">
								<Grid DataContext="{Binding SelectedItem}">
									<StackPanel Orientation="Horizontal" Visibility="{Binding Converter={StaticResource Object2VisibilityConverter}}">
										<TextBlock Text="{Binding FileInfo.Length, Converter={StaticResource FileSizeConverter}}" ToolTip="File Size"/>
										<TextBlock
											Margin="4,0,0,0"
											VerticalAlignment="Center"
											ToolTip="Table Size (Row, Column)"
											Visibility="{Binding TableModel, Converter={StaticResource Object2VisibilityConverter}}">
											<Run Text="("/><Run Text="{Binding TableModel.RowCount, Mode=OneWay}"/><Run Text=", "/><Run Text="{Binding TableModel.ColumnCount, Mode=OneWay}"/><Run Text=")"/>
										</TextBlock>
										<wpf:FontIcon
											Margin="4,0,0,0"
											wpf:ToolTipExtension.FastToolTip="True"
											Text="&#xE7BA;"
											ToolTip="{Binding WarningMessage}"
											Visibility="{Binding WarningMessage, Converter={StaticResource String2VisibilityConverter}}"/>
									</StackPanel>

									<Border Visibility="{Binding Converter={StaticResource Object2VisibilityReConverter}}">
										<TextBlock Text="No File"/>
									</Border>
								</Grid>
							</Border>

							<Border Padding="4,2">
								<TextBlock
									VerticalAlignment="Center"
									Text="{Binding SelectedItem.FilePath}"
									TextTrimming="CharacterEllipsis"
									ToolTip="{Binding SelectedItem.FilePath}"/>
							</Border>

						</DockPanel>
					</Border>

					<Border Grid.Column="1" Padding="4,2">
						<Border.Style>
							<Style TargetType="Border">
								<Setter Property="Margin" Value="0,0,12,0"/>
								<Style.Triggers>
									<DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=WindowState}" Value="{x:Static WindowState.Maximized}">
										<Setter Property="Margin" Value="0,0,0,0"/>
									</DataTrigger>
								</Style.Triggers>
							</Style>
						</Border.Style>
						<wpf:SpacingStackPanel HorizontalSpacing="4" Orientation="Horizontal">
							<TextBlock VerticalAlignment="Center" Text="{Binding AppManager.AppFullVersion}"/>
						</wpf:SpacingStackPanel>
					</Border>

				</Grid>
			</Border>
		</Grid>
	</Grid>

</UserControl>
